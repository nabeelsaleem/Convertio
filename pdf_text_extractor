    <script>
        // Apps Mega Menu Toggle
        const appsButton = document.querySelector('.bg-gray-100');
        const appsMenu = document.getElementById('apps-mega-menu');
        
        appsButton.addEventListener('click', (e) => {
            e.stopPropagation();
            appsMenu.classList.toggle('opacity-0');
            appsMenu.classList.toggle('invisible');
            appsMenu.classList.toggle('opacity-100');
            appsMenu.classList.toggle('visible');
        });

        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!appsMenu.contains(e.target) && e.target !== appsButton) {
                appsMenu.classList.add('opacity-0');
                appsMenu.classList.add('invisible');
                appsMenu.classList.remove('opacity-100');
                appsMenu.classList.remove('visible');
            }
        });

        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Mobile dropdown toggles
        document.querySelectorAll('#mobile-menu button').forEach(button => {
            button.addEventListener('click', function() {
                const targetId = this.textContent.trim().toLowerCase().replace(' ', '-') + '-mobile-dropdown';
                const dropdown = document.getElementById(targetId);
                dropdown.classList.toggle('hidden');
                
                // Toggle chevron icon
                const icon = this.querySelector('i');
                if (icon.classList.contains('fa-chevron-down')) {
                    icon.classList.remove('fa-chevron-down');
                    icon.classList.add('fa-chevron-up');
                } else {
                    icon.classList.remove('fa-chevron-up');
                    icon.classList.add('fa-chevron-down');
                }
            });
        });

        // Simulate tool page functionality
        if (window.location.pathname.includes('merge.html')) {
            document.querySelector('main').innerHTML = document.getElementById('tool-page-template').innerHTML;
            
            // Tool page specific JavaScript
            const dropzone = document.getElementById('dropzone');
            const fileInput = document.getElementById('file-input');
            const selectFilesBtn = document.getElementById('select-files');
            const fileList = document.getElementById('file-list');
            const filesContainer = document.getElementById('files');
            const progressContainer = document.getElementById('progress-container');
            const progressBar = document.getElementById('progress-bar');
            const progressPercent = document.getElementById('progress-percent');
            const options = document.getElementById('options');
            const mergeBtn = document.getElementById('merge-button');
            const clearBtn = document.getElementById('clear-button');
            
            let files = [];
            
            // Highlight dropzone when dragging over
            ['dragenter', 'dragover'].forEach(eventName => {
                dropzone.addEventListener(eventName, (e) => {
                    e.preventDefault();
                    dropzone.classList.add('active');
                });
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                dropzone.addEventListener(eventName, (e) => {
                    e.preventDefault();
                    dropzone.classList.remove('active');
                });
            });
            
            // Handle dropped files
            dropzone.addEventListener('drop', (e) => {
                e.preventDefault();
                const dt = e.dataTransfer;
                const newFiles = dt.files;
                handleFiles(newFiles);
            });
            
            // Handle selected files
            selectFilesBtn.addEventListener('click', () => {
                fileInput.click();
            });
            
            fileInput.addEventListener('change', () => {
                handleFiles(fileInput.files);
            });
            
            // Handle files
            function handleFiles(newFiles) {
                files = [...files, ...Array.from(newFiles)];
                updateFileList();
                
                if (files.length > 0) {
                    fileList.classList.remove('hidden');
                    options.classList.remove('hidden');
                }
            }
            
            // Update file list UI
            function updateFileList() {
                filesContainer.innerHTML = '';
                
                files.forEach((file, index) => {
                    const li = document.createElement('li');
                    li.className = 'flex items-center justify-between bg-gray-50 p-3 rounded-lg';
                    li.draggable = true;
                    li.dataset.index = index;
                    
                    li.innerHTML = `
                        <div class="flex items-center">
                            <i class="fas fa-file-pdf text-red-500 mr-3"></i>
                            <div>
                                <p class="text-gray-800 font-medium">${file.name}</p>
                                <p class="text-gray-500 text-sm">${formatFileSize(file.size)}</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <button class="move-up text-gray-500 hover:text-[#da3f0b] p-1">
                                <i class="fas fa-arrow-up"></i>
                            </button>
                            <button class="move-down text-gray-500 hover:text-[#da3f0b] p-1">
                                <i class="fas fa-arrow-down"></i>
                            </button>
                            <button class="remove-file text-gray-500 hover:text-red-500 p-1">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    `;
                    
                    filesContainer.appendChild(li);
                });
                
                // Add event listeners for buttons
                document.querySelectorAll('.move-up').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const li = e.target.closest('li');
                        const index = parseInt(li.dataset.index);
                        if (index > 0) {
                            [files[index], files[index - 1]] = [files[index - 1], files[index]];
                            updateFileList();
                        }
                    });
                });
                
                document.querySelectorAll('.move-down').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const li = e.target.closest('li');
                        const index = parseInt(li.dataset.index);
                        if (index < files.length - 1) {
                            [files[index], files[index + 1]] = [files[index + 1], files[index]];
                            updateFileList();
                        }
                    });
                });
                
                document.querySelectorAll('.remove-file').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const li = e.target.closest('li');
                        const index = parseInt(li.dataset.index);
                        files.splice(index, 1);
                        updateFileList();
                        
                        if (files.length === 0) {
                            fileList.classList.add('hidden');
                            options.classList.add('hidden');
                        }
                    });
                });
                
                // Add drag and drop sorting
                document.querySelectorAll('#files li').forEach(li => {
                    li.addEventListener('dragstart', (e) => {
                        e.dataTransfer.setData('text/plain', li.dataset.index);
                        setTimeout(() => {
                            li.classList.add('opacity-0');
                        }, 0);
                    });
                    
                    li.addEventListener('dragend', () => {
                        document.querySelectorAll('#files li').forEach(el => {
                            el.classList.remove('opacity-0');
                        });
                    });
                    
                    li.addEventListener('dragover', (e) => {
                        e.preventDefault();
                        const rect = li.getBoundingClientRect();
                        const midpoint = rect.top + rect.height / 2;
                        
                        if (e.clientY < midpoint) {
                            li.classList.add('border-t-2', 'border-[#da3f0b]');
                            li.classList.remove('border-b-2');
                        } else {
                            li.classList.add('border-b-2', 'border-[#da3f0b]');
                            li.classList.remove('border-t-2');
                        }
                    });
                    
                    li.addEventListener('dragleave', () => {
                        li.classList.remove('border-t-2', 'border-b-2', 'border-[#da3f0b]');
                    });
                    
                    li.addEventListener('drop', (e) => {
                        e.preventDefault();
                        li.classList.remove('border-t-2', 'border-b-2', 'border-[#da3f0b]');
                        
                        const fromIndex = parseInt(e.dataTransfer.getData('text/plain'));
                        const toIndex = parseInt(li.dataset.index);
                        const rect = li.getBoundingClientRect();
                        const midpoint = rect.top + rect.height / 2;
                        
                        let newIndex;
                        if (e.clientY < midpoint) {
                            newIndex = toIndex;
                        } else {
                            newIndex = toIndex + 1;
                        }
                        
                        if (fromIndex < newIndex) {
                            newIndex--;
                        }
                        
                        if (fromIndex !== newIndex) {
                            const [movedItem] = files.splice(fromIndex, 1);
                            files.splice(newIndex, 0, movedItem);
                            updateFileList();
                        }
                    });
                });
            }
            
            // Format file size
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
            
            // Merge button click
            mergeBtn.addEventListener('click', () => {
                if (files.length === 0) {
                    alert('Please select at least one file to merge.');
                    return;
                }
                
                progressContainer.classList.remove('hidden');
                mergeBtn.disabled = true;
                
                // Simulate processing
                let progress = 0;
                const interval = setInterval(() => {
                    progress += Math.random() * 10;
                    if (progress > 100) progress = 100;
                    
                    progressBar.style.width = `${progress}%`;
                    progressPercent.textContent = `${Math.round(progress)}%`;
                    
                    if (progress === 100) {
                        clearInterval(interval);
                        setTimeout(() => {
                            alert('Files merged successfully! This is a demo. In a real application, the merged file would download automatically.');
                            progressContainer.classList.add('hidden');
                            mergeBtn.disabled = false;
                        }, 500);
                    }
                }, 200);
            });
            
            // Clear button click
            clearBtn.addEventListener('click', () => {
                files = [];
                fileInput.value = '';
                fileList.classList.add('hidden');
                options.classList.add('hidden');
                progressContainer.classList.add('hidden');
                mergeBtn.disabled = false;
            });
        }
    </script>
</body>
</html>
